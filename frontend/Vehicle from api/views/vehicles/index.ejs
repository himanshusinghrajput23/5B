<h1 class="mb-4">All Vehicles</h1>
<a class="btn btn-primary mb-3" href="/vehicles/new">Add New Vehicle</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% vehicles.forEach(vehicle => { %>
    <div class="col">
      <div class="card h-100">
        <% if (vehicle.image) { %>
          <img src="<%= vehicle.image %>" class="card-img-top" alt="<%= vehicle.name %>">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= vehicle.name %></h5>
          <p class="card-text"><%= vehicle.brand %></p>
          <p><strong>â‚¹<%= vehicle.price %></strong></p>
          <a href="/vehicles/<%= vehicle._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
